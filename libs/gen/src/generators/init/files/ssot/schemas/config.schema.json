{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "email": {
            "properties": {
                "username": {
                    "type": "string",
                    "description": "Gmail username"
                },
                "password": {
                    "type": "string",
                    "description": "Gmail password"
                },
                "info": {
                    "type": "string",
                    "description": "info@company.com"
                },
                "security": {
                    "type": "string",
                    "description": "security@company.com"
                },
                "support": {
                    "type": "string",
                    "description": "support@company.com"
                },
                "website": {
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "required": [
                "username",
                "password"
            ]
        }
    },
    "required": [
        "email"
    ]
}